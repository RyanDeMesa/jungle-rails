<section class="orders-show">

  <header class="page-header">
    <h1>Order #<%= @order.id %></h1>
    <h5>Order confirmation and shipping details were sent to <strong><%= @order.email %></strong>.</h5>
  </header>

  <div class="panel panel-default items">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>Product</th>
          <th>Name</th>
          <th>Description</th>
          <th>Quantity</th>
        </tr>
      </thead>
      <tbody class="order-summary jumbotron">
        <% total_count = 0 %> <% @order.line_items.each do |item| %> <%
        total_count += item.quantity %> <%= render 'item', product:
        item.product, quantity: item.quantity %> <% end %>
      </tbody>
      <tfoot>
        <tr>
          <th colspan="3">Total Quantities</th>
          <th><%= total_count %></th>
        </tr>
        <tr>
          <th colspan="3">Total Cost</th>
          <th><%= humanized_money_with_symbol @order.total_cents / 100.0 %></th>
        </tr>
      </tfoot>
    </table>
  </div>

  <div>
    <%= link_to "Continue Shopping", root_path, class: 'btn btn-lg btn-primary' %>
  </div>
</section>
